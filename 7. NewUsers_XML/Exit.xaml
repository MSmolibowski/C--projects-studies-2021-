<Window x:Class="NewUsers.Exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewUsers"
        mc:Ignorable="d"
        Title="Exit" Height="450" Width="800">
    <Grid>
        <Label Content="Save changes?" HorizontalAlignment="Center" Margin="0,174,0,0" VerticalAlignment="Top" Height="61" Width="244" FontSize="35"/>
        <Button x:Name="save" Content="Yes" HorizontalAlignment="Left" Margin="84,304,0,0" VerticalAlignment="Top" Height="48" Width="159" FontSize="22" Click="save_Click"/>
        <Button x:Name="dont_save" Content="No" HorizontalAlignment="Left" Margin="555,304,0,0" VerticalAlignment="Top" Height="48" Width="159" FontSize="22" Click="dont_save_Click"/>

    </Grid>
</Window>
